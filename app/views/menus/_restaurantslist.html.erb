<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Menu List</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @menu.try(:each) do |menu| %>
    
      <tr>
         <td><%= menu.menu_item %></td>
        <td><%= menu.calories %></td>
        <td><%= menu.restaurant.restaurant_name %></td>
        <td><%= link_to 'Show', menu.restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(menu.restaurant) %></td>
        <td><%= link_to 'Destroy', menu, :controller =>"menu", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
   
    <% end %>
  </tbody>
</table>